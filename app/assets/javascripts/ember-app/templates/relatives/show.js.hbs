<h1>
  Hi there, my name is {{name}}!
</h1>
<div class="btn btn-default" {{action 'reload'}}><i class="fa fa-refresh"></i> Reload</div>
<div class="btn btn-success" {{action 'new' model}}><i class="fa fa-plus"></i> Bom-chicka-wah-wah</div>
{{#link-to 'relatives.edit' model classNames="btn btn-default"}}<i class="fa fa-pencil"></i> Edit{{/link-to}}
<div class="btn btn-danger" {{action 'delete' model}}><i class="fa fa-trash-o"></i> Delete</div>
<br/>
<br/>
<ol class="breadcrumb">
  <li>{{#link-to 'relatives.index'}}Home{{/link-to}}</li>
  {{#each ancestor in ancestors}}
    <li><span class="divider">/</span>{{#link-to 'relatives.show' ancestor}}{{ancestor.name}}{{/link-to}}</li>
  {{/each}}
</ol>

<ul class="list-group">
  <div class="list-group-item list-group-item-info">Siblings</div>
  {{#each sibling in filteredSiblings}}
    {{#link-to 'relatives.show' sibling classNames="list-group-item"}}
      {{sibling.name}}
      <div class="btn-group pull-right btn-group-xs">
        <div class="btn btn-success" {{action 'new' sibling}}><i class="fa fa-plus"></i></div>
        <div class="btn btn-default" {{action 'edit' sibling}}><i class="fa fa-pencil"></i></div>
        <div class="btn btn-danger" {{action 'delete' sibling}}><i class="fa fa-trash-o"></i></div>
      </div>
    {{/link-to}}
  {{else}}
    <div class="list-group-item">I gotz no siblings.</div>
  {{/each}}
</ul>

<ul class="list-group">
  <div class="list-group-item list-group-item-info">
    Kids
  </div>
  {{#each kid in kids}}
    {{#link-to 'relatives.show' kid classNames="list-group-item"}}
      {{kid.name}}
      <div class="btn-group pull-right btn-group-xs">
        <div class="btn btn-success" {{action 'new' kid}}><i class="fa fa-plus"></i></div>
        <div class="btn btn-default" {{action 'edit' kid}}><i class="fa fa-pencil"></i></div>
        <div class="btn btn-danger" {{action 'delete' kid}}><i class="fa fa-trash-o"></i></div>
      </div>
    {{/link-to}}
  {{else}}
    <div class="list-group-item">I gotz no kids.</div>
  {{/each}}
</ul>